{
  "expo": {
    "name": "Live Activity Example",
    "slug": "expo-live-activity-example",
    "version": "1.0.0",
    "platforms": ["ios", "android"],
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "plugins": [
      [
        "@heojeongbo/expo-live-activity",
        {
          "developmentTeam": "YOUR_DEVELOPMENT_TEAM_ID",
          "widgetBundleIdentifier": "com.heojeongbo.expo-live-activity-example.LiveActivityWidget",
          "widgetDisplayName": "LiveActivityWidget",
          "iosDeploymentTarget": "16.1"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff",
          "defaultChannel": "live-activities",
          "sounds": []
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "This app uses the microphone to record audio for Live Activities."
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.heojeongbo.expo-live-activity-example",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone for audio recording Live Activities.",
        "NSSupportsLiveActivities": true,
        "NSSupportsLiveActivitiesFrequentUpdates": true
      },
      "entitlements": {
        "com.apple.developer.usernotifications.live-activities": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.heojeongbo.expoliveactivityexample",
      "permissions": [
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECORD_AUDIO",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.WAKE_LOCK"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
